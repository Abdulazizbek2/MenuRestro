@model IEnumerable<MenuRestro.Models.Food>

<h2>Список Блюд</h2>

<table class="table">
	<thead>
		<tr>
			<th>Название</th>
			<th>Описание</th>
			<th>Тип блюда</th>
			<th>Ресторан</th>
			<th>Действия</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var food in Model)
		{
			<tr>
				<td>@food.Name</td>
				<td>@food.Description</td>
				<td>@food.TypeFood?.Name</td> <!-- Отображение названия типа блюда -->
				<td>@food.Restaurant?.Name</td> <!-- Отображение названия ресторана -->
				<td>
					<a asp-action="Edit" asp-route-id="@food.FoodId">Редактировать</a> |
					<a asp-action="Delete" asp-route-id="@food.FoodId">Удалить</a> |
					<a asp-action="Details" asp-route-id="@food.FoodId">Подробнее</a>
				</td>
			</tr>
		}
	</tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Добавить новое блюдо</a>