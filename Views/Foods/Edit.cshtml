@model MenuRestro.Models.Food

<h2>Редактировать Блюдо</h2>

<form asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="FoodId" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TypeFoodId" class="control-label"></label>
        <select asp-for="TypeFoodId" class="form-control" asp-items="ViewBag.TypeFoodId"></select>
    </div>
    <div class="form-group">
        <label asp-for="RestaurantId" class="control-label"></label>
        <select asp-for="RestaurantId" class="form-control" asp-items="ViewBag.RestaurantId"></select>
    </div>
    <div class="form-group">
        <label asp-for="ImagePath" class="control-label"></label>
        <input asp-for="ImagePath" class="form-control" type="file" />
    </div>
    <div style="margin-bottom: 20px;"></div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-primary" />
    </div>
</form>

<a asp-action="Index">Назад к списку</a>